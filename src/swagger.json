    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "users"
                ],
                "summary": "Criar um novo usuário",
                "description": "Criar um novo usuário, informar name e email",
                "operationId": "createUser",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "$ref": "#/components/schemas/CreateUserDTO"
                            },
                            "example": {
                                "name": "Raphael Feitosa",
                                "email": "raphaelteste@gmail.com"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Criado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "E-mail já registrado",
                        "content": {}
                    }
                },
                "x-codegen-request-body-name": "body"
            },
            "get": {
                "tags": [
                    "users"
                ],
                "summary": "Retorna uma lista de usuários",
                "description": "Somente uśuario ADMIN pode listar todos os usuários",
                "operationId": "getUsers",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "header",
                        "description": "Parâmetro user_id do Admin necessário",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "ID de usuário inválido",
                        "content": {}
                    },
                    "404": {
                        "description": "Usuário não encontrado",
                        "content": {}
                    }
                }
            }
        },
        "/users/{user_id}/admin": {
            "patch": {
                "tags": [
                    "users"
                ],
                "summary": "Torna administrador um determinado usuário",
                "operationId": "SetUserToAdmin",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "description": "Parâmetro user_id é necessário",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserAdmin"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "ID de usuário inválido",
                        "content": {}
                    },
                    "404": {
                        "description": "Usuário não encontrado",
                        "content": {}
                    }
                }
            }
        },
        "/users/{user_id}": {
            "get": {
                "tags": [
                    "users"
                ],
                "summary": "Retorna um usuário específico",
                "operationId": "getUserById",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "description": "Parâmetro user_id é necessário",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "ID de usuário inválido",
                        "content": {}
                    },
                    "404": {
                        "description": "Usuário não encontrado",
                        "content": {}
                    }
                }
            },
            "put": {
                "tags": [
                    "users"
                ],
                "summary": "Alterar o registro de um usuário",
                "description": "Necessário estar autenticado.",
                "operationId": "updateUser",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "description": "user_id é necessário para efetuar a alteração",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Updated user object",
                    "content": {
                        "*/*": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateUserDTO"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "400": {
                        "description": "Invalid user supplied",
                        "content": {}
                    },
                    "404": {
                        "description": "User not found",
                        "content": {}
                    }
                },
                "x-codegen-request-body-name": "body"
            },
            "delete": {
                "tags": [
                    "users"
                ],
                "summary": "Deletar um usuário específico",
                "description": "É necessário estar autenticado, um usuário pode deletar apenas sua conta, um administrador pode deletar qualquer conta.",
                "operationId": "deleteUser",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "description": "O user_id é necessário",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Usuário deletado com sucesso",
                        "content": {}
                    },
                    "400": {
                        "description": "ID de usuário inválido",
                        "content": {}
                    },
                    "404": {
                        "description": "Usuário não encontrado",
                        "content": {}
                    }
                }
            }
        }
    },
